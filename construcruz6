void cargarregistro(char nombre[], char apellido[])
{

	int num;
		cout << "Introducir un solo nombre a registrar:  " << endl;
	cin >> nombre;
	cout << "Introducir un apellido:  " << endl;
	cin >> apellido;
	cout << "Introducir numero de telefono para poder contactar :" << endl;

	
	cin >> num;
	
	system("cls");
	cout << "Registro correcto de: " << nombre << "  "<<apellido <<endl;
	cout << "Numero telefonico =+591" << num << endl;
	cout << "presione cualquier tecla para volver";
	_getch();
}
void mostrar(char nombre[], char apellido[])
{
	cout << "   Trabajadores registrados: " << endl;
	cout << nombre << " " << apellido ;
	_getch();
}
